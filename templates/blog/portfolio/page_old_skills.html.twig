{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .progress-bar {
            transition: width 1.5s ease-in-out;
        }
        .skill-section {
            margin-bottom: 2rem;
        }
        .section-divider {
            border-top: 3px solid #375a7f;
            margin: 3rem 0;
        }
        .cert-card {
            transition: transform 0.2s;
        }
        .cert-card:hover {
            transform: translateY(-5px);
        }
        .cert-image {
            max-height: 200px;
            object-fit: cover;
        }
        
    </style>
{% endblock %}

{% block title %}Skills{% endblock %}

