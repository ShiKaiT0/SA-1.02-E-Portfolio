{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 2rem;
        margin-bottom: 2rem;
    }
    .section-title {
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 2rem;
        text-align: center;
        color: #ffffff;
    }
    .page-header {
        background: linear-gradient(135deg, rgba(0, 123, 255, 0.1), rgba(102, 16, 242, 0.1));
        padding: 5rem 0;
        margin-bottom: 3.75rem;
        box-shadow: 0 5px 7.5px rgba(0,0,0,0.1);
    }
    .page-header h1 {
        font-size: 3.75rem;
        font-weight: 700;
        text-shadow: 2.5px 2.5px 5px rgba(0,0,0,0.1);
        color: #ffffff;
    }
    .page-header .lead {
        font-size: 1.5625rem;
        max-width: 1000px;
        margin: 0 auto;
        color: #e0e0e0;
    }
    .nav-pills .nav-link {
        color: #ffffff;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 37.5px;
        padding: 0.625rem 1.25rem;
        margin: 0.3125rem;
        transition: all 0.3s ease;
    }
    .nav-pills .nav-link:hover {
        transform: translateY(-2.5px);
        box-shadow: 0 5px 7.5px rgba(255,255,255,0.1);
        background-color: rgba(255, 255, 255, 0.2);
    }
    .btn-outline-light {
        border-color: rgba(255, 255, 255, 0.5);
    }
    .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }
    .progress {
        background-color: rgba(0, 0, 0, 0.2);
    }
    .progress-bar {
        background-color: rgba(255, 255, 255, 0.7);
    }
    .badge {
        background-color: rgba(255, 255, 255, 0.2);
        color: #ffffff;
    }
    .formation-card, .competence-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .formation-card:hover, .competence-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(255,255,255,0.1);
    }
</style>
{% endblock %}

{% block body %}
    <header class="page-header text-white text-center">
        <div class="container">
            <h1 class="display-4 mb-4">L'intitulé du poste réseaux et
                télécommunications (ou autre) de vos rêves</h1>
            <p class="lead mb-5">Ingénieur en Cybersécurité</p>
            
            <nav class="mt-4">
                <ul class="nav nav-pills justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link" href="#formations">
                            <i class="fas fa-graduation-cap me-2"></i>Formations
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#experiences">
                            <i class="fas fa-briefcase me-2"></i>Expériences
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#competences">
                            <i class="fas fa-code-branch me-2"></i>Compétences
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container mb-4">
        <div class="d-flex gap-3 justify-content-end">
            <button type="button" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#exportModal">
                <i class="fas fa-file-export"></i> Exporter le Portfolio
            </button>
            <a href="{{ path('app_skills') }}" class="btn btn-outline-light">
                <i class="fas fa-folder-open"></i> Justificatifs en détails
            </a>
        </div>
    </div>

    <div class="container">
        {# Section Formations #}
        <section id="formations" class="mb-5">
            <h2 class="section-title">
                <i class="fas fa-graduation-cap"></i> Formations
            </h2>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="glass-card formation-card">
                        <h5 class="card-title">BUT Réseaux & Télécommunications</h5>
                        <h6 class="card-subtitle mb-2 text-info">2024 - 2025 (en cours)</h6>
                        <p class="card-text">IUT de Roanne</p>
                        <div class="card-text">
                            <p>Formation complète en réseaux et télécommunications avec spécialisation en:</p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success"></i> Administration systèmes et réseaux</li>
                                <li><i class="fas fa-check text-success"></i> Virtualisation et Cloud Computing</li>
                                <li><i class="fas fa-check text-success"></i> Sécurité des réseaux</li>
                                <li><i class="fas fa-check text-success"></i> Développement et automatisation</li>
                                <li><i class="fas fa-check text-success"></i> Projets en méthodologie Agile</li>
                            </ul>
                            <p class="mt-3">
                                <i class="fas fa-trophy text-warning"></i> Mention "Très Bien" aux examens du semestre 4
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="glass-card formation-card">
                        <h5 class="card-title">Terminale - Série Générale</h5>
                        <h6 class="card-subtitle mb-2 text-info">2021 - 2024</h6>
                        <p class="card-text">Lycée Galilée (Vienne, 38)</p>
                        <p>Spécialité  - Mathématiques & Numériques et Sciences Informatiques</p>
                        <p>Formation ayant permis l'acquisition des compétences suivantes :</p>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success"></i> Bases des réseaux</li>
                            <li><i class="fas fa-check text-success"></i> Bases des systèmes électriques</li>
                            <li><i class="fas fa-check text-success"></i> Architecture des sytèmes (processeurs,...)</li>
                            <li><i class="fas fa-check text-success"></i> Intéractions avec des bases de données</li>
                            <li><i class="fas fa-check text-success"></i> Programmation orienté objet</li>
                        </ul>
                        <p class="mt-3">
                            <i class="fas fa-trophy text-warning"></i> Mention "Bien" obtenue au Baccalauréat
                        </p>
                    </div>
                </div>
            </div>
        </section>

        {# Section Expériences Professionnelles #}
        <section id="experiences" class="mb-5">
            <h2 class="section-title">
                <i class="fas fa-briefcase"></i> Expériences Professionnelles
            </h2>
            
            <div class="glass-card mb-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="card-title">Stage - Entreprise de Pharmaceutique</h5>
                        <h6 class="card-subtitle mb-2 text-info">SPIE International - Pharma</h6>
                    </div>
                    <span class="badge">2020 - 3 Semaines</span>
                </div>
                <p class="card-text mt-3">
                    Stage de fin d'année focalisé la partie Technique et Informatique de l'entreprise :
                </p>
                <ul>
                    <li>Utilisations de logiciels 3D pour la conception de machines 
                        <ul>
                            <li>Créations de pièces basiques avec des logiciels comme AutoCAD</li>
                            <li>Tests d'impressions 3D</li>
                        </ul>
                    </li>
                    <li> Découvertes armoires électriques & Uitlisation de logiciels de schématisation électrique 
                        <ul> 
                            <li>Ouverture, vérification et découverte hors tension.</li>
                        </ul>
                    </li>
                    <li> Découvertes de la partie informatique de l'entreprise
                        <ul>
                            <li>Discussions avec un Automaticien</li>
                            <li>Tests de programmes de machines industrielles</li>
                        </ul>
                    </li>
                </ul>
                <div class="mt-3">
                    <span class="badge me-2">Programmation</span>
                    <span class="badge me-2">3D Industrielle</span>
                    <span class="badge me-2">Automatisme</span>
                    <span class="badge">Monitoring</span>
                </div>
            </div>
        </section>

        {# Section Compétences #}
        <section id="competences" class="mb-5">
            <h2 class="section-title">
                <i class="fas fa-code-branch"></i> Compétences
            </h2>
            
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="glass-card competence-card h-100">
                        <h5 class="card-title text-info">
                            <i class="fas fa-network-wired"></i> Réseaux
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> TCP/IP</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 90%"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> Switching & Routing</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 85%"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> VLANs</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 80%"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> WiFi</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 75%"></div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="glass-card competence-card h-100">
                        <h5 class="card-title text-info">
                            <i class="fas fa-server"></i> Systèmes
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> Linux</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 95%"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> Windows Server</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 70%"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> Virtualisation</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 90%"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> Docker</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 85%"></div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="glass-card competence-card h-100">
                        <h5 class="card-title text-info">
                            <i class="fas fa-shield-alt"></i> Sécurité
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> Firewall</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 80%"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> VPN</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 75%"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> Cryptographie</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 70%"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check text-success"></i> Sécurité Web</span>
                                    <div class="progress" style="width: 100px">
                                        <div class="progress-bar" style="width: 65%"></div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </div>

    {# Modal Export #}
    <div class="modal fade" id="exportModal" tabindex="-1" aria-labelledby="exportModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark">
                <div class="modal-header">
                    <h5 class="modal-title" id="exportModalLabel">Exporter le Portfolio</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="text-light">Remplissez le formulaire ci-dessous pour recevoir une copie PDF de mon CV et portfolio.</p>
                    <form id="exportForm">
                        <div class="mb-3">
                            <label for="name" class="form-label text-light">Nom</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label text-light">Email</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label text-light">Message (optionnel)</label>
                            <textarea class="form-control" id="message" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var myModal = new bootstrap.Modal(document.getElementById('exportModal'), {
            backdrop: 'static',
            keyboard: false
        });
        
        document.querySelector('[data-bs-target="#exportModal"]').addEventListener('click', function(event) {
            event.preventDefault();
            myModal.show();
        });
    });
</script>
{% endblock %}

