{% extends 'base.html.twig' %}

{% block title %}About Me - Projects & Compositions{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/5/darkly/bootstrap.min.css">
    <style>
        .project-card {
            transition: transform 0.2s;
            margin-bottom: 2rem;
        }
        .project-card:hover {
            transform: translateY(-5px);
        }
        .video-container {
            position: relative;
            padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
            height: 0;
            overflow: hidden;
            margin-bottom: 1rem;
        }
        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        .section-divider {
            border-top: 3px solid #375a7f;
            margin: 3rem 0;
        }
        .about-me-card {
            background-color: #2c3e50;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .nav-pills .nav-link {
            color: #fff;
            background-color: #375a7f;
            margin-right: 10px;
            margin-bottom: 10px;
        }
        .nav-pills .nav-link:hover {
            background-color: #2c3e50;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- About Me Section -->
    <section id="about-me" class="mb-5">
        <h1 class="display-4 mb-4">About Me</h1>
        <div class="about-me-card">
