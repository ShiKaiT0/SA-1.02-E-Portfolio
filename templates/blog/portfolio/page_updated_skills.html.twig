            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            color: #ffffff;
        }
        #projetsApprentissagesCarousel .card-text {
            font-size: 1.1rem;
            max-width: 80%;
            color: #e0e0e0;
        }
        #projetsApprentissagesCarousel .apprentissages {
            background-color: rgba(0,0,0,0.6);
            border-radius: 10px;
            padding: 1rem;
        }
        #projetsApprentissagesCarousel .ac-item {
            margin-top: 0.5rem;
            padding: 0.5rem;
            background-color: rgba(255,255,255,0.1);
            border-radius: 5px;
        }
        #projetsApprentissagesCarousel .ac-item h5 {
            font-size: 1rem;
            margin-bottom: 0.25rem;
            color: #ffffff;
        }
        #projetsApprentissagesCarousel .ac-item p {
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            color: #e0e0e0;
        }
        #projetsApprentissagesCarousel .btn-group {
            display: flex;
            gap: 0.5rem;
        }
        #projetsApprentissagesCarousel .carousel-control-prev,
        #projetsApprentissagesCarousel .carousel-control-next {
            width: 5%;
            opacity: 0.8;
        }
        #projetsApprentissagesCarousel .carousel-control-prev {
            left: -60px;
        }
        #projetsApprentissagesCarousel .carousel-control-next {
            right: -60px;
        }
        .btn-primary, .btn-secondary {
            background-color: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.2);
            color: #ffffff;
        }
        .btn-primary:hover, .btn-secondary:hover {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.3);
            color: #ffffff;
        }
        .progress {
            background-color: rgba(255, 255, 255, 0.1);
        }
        .progress-bar {
            background-color: rgba(255, 255, 255, 0.5);
        }
        .skill-item {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }
        .skill-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        #projetsApprentissagesCarousel .card-img-overlay {
            background: linear-gradient(to bottom, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 100%);
        }
        .apprentissages {
            background-color: rgba(0, 0, 0, 0.6);
            border-radius: 10px;
            padding: 1rem;
        }
        #certificationCarousel .glass-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        #certificationCarousel .glass-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(255,255,255,0.1);
        }
        #projectCarousel {
            position: relative;
            max-width: 1000px;
            margin: 0 auto;
        }

        #projectCarousel .carousel-control-prev,
        #projectCarousel .carousel-control-next {
            width: 5%;
            background-color: transparent;
            border-radius: 0;
            height: 100%;
            top: 0;
            transform: none;
        }

        #projectCarousel .carousel-control-prev {
            left: -60px;
        }

        #projectCarousel .carousel-control-next {
            right: -60px;
        }

        .project-container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .project-card {
            height: 550px;
            overflow: hidden;
        }

        .project-card .card-img-top {
            height: 350px;
            object-fit: cover;
        }

        .project-card .card-body {
            height: 200px;
            overflow-y: auto;
        }

        #projectCarousel .carousel-item {
            transition: transform 0.6s ease-in-out;
        }
    </style>
{% endblock %}

{% block body %}
