{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .tool-icon {
            transition: transform 0.3s ease;
        }
        .tool-icon:hover {
            transform: scale(1.1);
        }
        .circular-progress {
            width: 150px;
            height: 150px;
        }
        .competence-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .competence-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        .tool-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .tool-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        #certificationCarousel .carousel-control-prev,
        #certificationCarousel .carousel-control-next {
            width: 5%;
        }
        #certificationCarousel .carousel-inner {
            width: 90%;
            margin: 0 auto;
        }
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            border-radius: 15px;
            margin-bottom: 25px;
        }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        .card-body {
            padding: 1.875rem;
        }
        .card-title {
            font-size: 1.5625rem;
            margin-bottom: 1.25rem;
        }
        .card-text {
            font-size: 1.1875rem;
            line-height: 1.5;
        }
        .card img {
            transition: filter 0.3s ease, brightness 0.3s ease;
            filter: brightness(80%);
            object-fit: cover;
            height: 250px;
            width: 100%;
        }
        .card:hover img {
            filter: brightness(110%);
        }
        #certificationCarousel .card-img-top {
            object-fit: contain;
            height: 187.5px;
            width: 100%;
            background-color: white;
            padding: 12.5px;
        }
        .page-header {
            background: linear-gradient(135deg, #007bff, #6610f2);
            padding: 5rem 0;
            margin-bottom: 3.75rem;
            box-shadow: 0 5px 7.5px rgba(0,0,0,0.1);
        }
        .page-header h1 {
            font-size: 3.75rem;
            font-weight: 700;
            text-shadow: 2.5px 2.5px 5px rgba(0,0,0,0.1);
        }
        .page-header .lead {
            font-size: 1.5625rem;
            max-width: 1000px;
            margin: 0 auto;
        }
        .nav-pills .nav-link {
            border-radius: 37.5px;
            padding: 0.625rem 1.25rem;
            margin: 0.3125rem;
            transition: all 0.3s ease;
        }
        .nav-pills .nav-link:hover {
            transform: translateY(-2.5px);
            box-shadow: 0 5px 7.5px rgba(0,0,0,0.1);
        }
        .competence-icon {
            width: 80px;
            height: 80px;
            object-fit: contain;
        }
        .tool-logo {
            font-size: 4rem;
            color: #17a2b8;
        }
        .network-skills-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .network-skills {
            width: 100%;
            max-width: 800px;
        }
        .skill-item {
            margin-bottom: 1rem;
            padding: 1rem;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            transition: all 0.3s ease;
        }
        .skill-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .skill-item h3 {
            margin-bottom: 0.5rem;
