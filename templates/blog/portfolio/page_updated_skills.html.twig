{% extends 'base.html.twig' %}

{% block title %}Compétences Détaillées{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .tool-icon {
            transition: transform 0.3s ease;
        }
        .tool-icon:hover {
            transform: scale(1.1);
        }
        .circular-progress {
            width: 150px;
            height: 150px;
        }
        .competence-card, .tool-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .competence-card:hover, .tool-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(255,255,255,0.1);
        }
        #certificationCarousel .carousel-control-prev,
        #certificationCarousel .carousel-control-next {
            width: 5%;
        }
        #certificationCarousel .carousel-inner {
            width: 90%;
            margin: 0 auto;
        }
        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            border-radius: 15px;
            margin-bottom: 25px;
        }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(255,255,255,0.1);
        }
        .card-body {
            padding: 1.875rem;
        }
        .card-title {
            font-size: 1.5625rem;
            margin-bottom: 1.25rem;
            color: #ffffff;
        }
        .card-text {
            font-size: 1.1875rem;
            line-height: 1.5;
            color: #e0e0e0;
        }
        .card img {
            transition: filter 0.3s ease, brightness 0.3s ease;
            filter: brightness(80%);
            object-fit: cover;
            height: 250px;
            width: 100%;
        }
        .card:hover img {
            filter: brightness(110%);
        }
        #certificationCarousel .card-img-top {
            object-fit: contain;
            height: 187.5px;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.1);
            padding: 12.5px;
        }
        .page-header {
            background: linear-gradient(135deg, rgba(0, 123, 255, 0.1), rgba(102, 16, 242, 0.1));
            padding: 5rem 0;
            margin-bottom: 3.75rem;
            box-shadow: 0 5px 7.5px rgba(0,0,0,0.1);
        }
        .page-header h1 {
            font-size: 3.75rem;
            font-weight: 700;
            text-shadow: 2.5px 2.5px 5px rgba(0,0,0,0.1);
            color: #ffffff;
        }
        .page-header .lead {
            font-size: 1.5625rem;
            max-width: 1000px;
            margin: 0 auto;
            color: #e0e0e0;
        }
        .nav-pills .nav-link {
            color: #ffffff;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 37.5px;
            padding: 0.625rem 1.25rem;
            margin: 0.3125rem;
            transition: all 0.3s ease;
        }
        .nav-pills .nav-link:hover {
            transform: translateY(-2.5px);
            box-shadow: 0 5px 7.5px rgba(255,255,255,0.1);
            background-color: rgba(255, 255, 255, 0.2);
        }
        .competence-icon {
            width: 80px;
            height: 80px;
            object-fit: contain;
        }
        .tool-logo {
            font-size: 4rem;
            color: #ffffff;
        }
        .network-skills-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .network-skills {
            width: 100%;
            max-width: 800px;
        }
        .skill-item {
            margin-bottom: 1rem;
            padding: 1rem;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            transition: all 0.3s ease;
        }
        .skill-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(255, 255, 255, 0.1);
        }
        .skill-item h3 {
            margin-bottom: 0.5rem;
            color: #ffffff;
        }
        .project-card {
            height: 500px;
            overflow: hidden;
        }
        .project-card .card-img-top {
            height: 300px;
            object-fit: cover;
        }
        .accordion-button {
            background-color: rgba(255, 255, 255, 0.1);
            color: #ffffff;
        }
        .accordion-button:not(.collapsed) {
            background-color: rgba(255, 255, 255, 0.2);
            color: #ffffff;
        }
        .accordion-body {
            background-color: rgba(0, 0, 0, 0.2);
            color: #ffffff;
        }
        #projetsApprentissagesCarousel .card {
            height: 600px;
            overflow: hidden;
        }
        #projetsApprentissagesCarousel .card-img {
            object-fit: cover;
            height: 100%;
            filter: brightness(40%);
