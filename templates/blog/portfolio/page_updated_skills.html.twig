{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .tool-icon {
            transition: transform 0.3s ease;
        }
        .tool-icon:hover {
            transform: scale(1.1);
        }
        .circular-progress {
            width: 120px;
            height: 120px;
        }
        .competence-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .competence-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
        .tool-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .tool-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
        #certificationCarousel .carousel-control-prev,
        #certificationCarousel .carousel-control-next {
            width: 5%;
        }
        #certificationCarousel .carousel-inner {
            width: 90%;
            margin: 0 auto;
        }
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            border-radius: 15px;
            margin-bottom: 20px;
        }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        .card-body {
            padding: 1.5rem;
        }
        .card-title {
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }
        .card-text {
            font-size: 0.95rem;
            line-height: 1.5;
        }
        .card img {
            transition: filter 0.3s ease, brightness 0.3s ease;
            filter: brightness(80%);
            object-fit: cover;
            height: 200px;
            width: 100%;
        }
        .card:hover img {
            filter: brightness(110%);
        }
        #certificationCarousel .card-img-top {
            object-fit: contain;
            height: 150px;
            width: 100%;
            background-color: white;
            padding: 10px;
        }
        .page-header {
            background: linear-gradient(135deg, #007bff, #6610f2);
            padding: 4rem 0;
            margin-bottom: 3rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .page-header h1 {
            font-size: 3rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        .page-header .lead {
            font-size: 1.25rem;
            max-width: 800px;
            margin: 0 auto;
        }
        .nav-pills .nav-link {
            border-radius: 30px;
            padding: 0.5rem 1rem;
            margin: 0.25rem;
            transition: all 0.3s ease;
        }
        .nav-pills .nav-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
    </style>
{% endblock %}

